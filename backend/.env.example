# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/documed
DATABASE_URL=postgresql://user:password@localhost:5432/documed

# AI/ML API Keys
GEMINI_API_KEY=your_gemini_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security
JWT_SECRET=your_secret_key_for_jwt_tokens
ENCRYPTION_KEY=your_encryption_key_here
API_KEY=your_api_key_for_authentication

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ML Model Paths
XRAY_MODEL_PATH=./ml_models/weights/xray_weights.hdf5
MRI_MODEL_PATH=./ml_models/weights/mri_weights.hdf5
MODEL_ARCHITECTURE_PATH=./ml_models/architecture.json

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
WORKERS=4

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# External APIs
WEATHER_API_KEY=your_weather_api_key
MAPS_API_KEY=your_google_maps_api_key

# Feature Flags
ENABLE_ML_MODELS=True
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_REAL_TIME_TRACKING=True
